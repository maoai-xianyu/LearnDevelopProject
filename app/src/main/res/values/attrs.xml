<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="FancyCoverFlow">
        <attr name="unselectedAlpha" format="float" />
        <attr name="unselectedSaturation" format="float" />
        <attr name="unselectedScale" format="float" />
        <attr name="maxRotation" format="integer" />
        <attr name="scaleDownGravity" format="float" />
        <attr name="actionDistance" format="integer">
            <enum name="auto" value="2147483647" />
        </attr>
    </declare-styleable>


    <!-- 定义名字叫MyAttributeView属性集合-->
    <declare-styleable name="MyAttributeView">
        <!-- 定义名字叫 my_name 并且类型是string的属性-->
        <attr name="my_name" format="string" />
        <attr name="my_age" format="integer" />
        <!-- 定义名字叫 my_bg 并且类型是reference|color的属性-->
        <attr name="my_bg" format="reference|color" />
    </declare-styleable>


    <!--name 自定义View的名字 DefineTextView-->
    <declare-styleable name="DefineTextView">
        <!-- name 属性名称

        format 格式: string 文字  color 颜色
                    dimension 宽高 字体大小  integer 数字
                    reference 资源（drawable）
       -->
        <attr name="defineText" format="string" />
        <attr name="defineTextColor" format="color" />
        <attr name="defineTextSize" format="dimension" />
        <attr name="defineMaxLength" format="integer" />
        <!--   Background 自定义View都是继承与View，是系统的属性     -->
        <!--<attr name="defineBackground" format="reference|color" />-->

        <!-- 枚举 -->
        <attr name="defineInputType">
            <enum name="number" value="1" />
            <enum name="text" value="2" />
            <enum name="password" value="3" />
        </attr>

    </declare-styleable>

    <!-- 仿QQ步数-->
    <declare-styleable name="QQStepView">
        <attr name="outerColor" format="color" />
        <attr name="innerColor" format="color" />
        <attr name="borderWidth" format="dimension" />
        <attr name="stepTextSize" format="dimension" />
        <attr name="stepTextColor" format="color" />
    </declare-styleable>

    <!--ColorTrackTextView-->
    <declare-styleable name="ColorTrackTextView">

        <attr name="originColor" format="color"/>
        <attr name="changeColor" format="color"/>

    </declare-styleable>


</resources>