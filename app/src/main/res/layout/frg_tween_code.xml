<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_alpha"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="alpha" />

        <TextView
            android:id="@+id/tv_rotate"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d2"
            android:text="rotate" />

        <TextView
            android:id="@+id/tv_rotate_arrow"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d2"
            android:text="rotate_arrow" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d5"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_scale"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="scale" />

        <TextView
            android:id="@+id/tv_trans"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d2"
            android:text="trans" />

        <TextView
            android:id="@+id/tv_animator_set"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d2"
            android:text="animator_set" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d5"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_interpolator"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d2"
            android:text="tv_interpolator" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="@dimen/d80"
            android:layout_height="@dimen/d100"
            android:layout_centerInParent="true"
            android:src="@drawable/image_datong_logo" />


        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="@dimen/d80"
            android:layout_height="@dimen/d100"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/d20"
            android:src="@drawable/icon_down" />

    </RelativeLayout>


</LinearLayout>