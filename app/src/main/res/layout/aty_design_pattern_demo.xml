<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_header" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/mDT1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/d5"
            android:background="@drawable/shape_corner_button"
            android:padding="@dimen/d5"
            android:text="单例模式，Activity管理"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mDT2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d10"
            android:background="@drawable/shape_corner_button"
            android:padding="@dimen/d5"
            android:text="构建者模式，NavigationBar"
            app:layout_constraintBaseline_toBaselineOf="@+id/mDT1"
            app:layout_constraintStart_toEndOf="@+id/mDT1"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/mDT3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d5"
            android:background="@drawable/shape_corner_button"
            android:padding="@dimen/d5"
            android:text="圆圈进度条"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mDT1" />


        <TextView
            android:id="@+id/mDT4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d5"
            android:layout_marginTop="@dimen/d5"
            android:background="@drawable/shape_corner_button"
            android:padding="@dimen/d5"
            android:text="Rating bar"
            app:layout_constraintStart_toEndOf="@+id/mDT3"
            app:layout_constraintTop_toBottomOf="@+id/mDT1" />

        <TextView
            android:id="@+id/mDT5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d5"
            android:layout_marginTop="@dimen/d5"
            android:background="@drawable/shape_corner_button"
            android:padding="@dimen/d5"
            android:text="字母索引列表"
            app:layout_constraintStart_toEndOf="@+id/mDT4"
            app:layout_constraintTop_toBottomOf="@+id/mDT1" />

        <TextView
            android:id="@+id/mDT6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d5"
            android:layout_marginTop="@dimen/d5"
            android:background="@drawable/shape_corner_button"
            android:padding="@dimen/d5"
            android:text="流式布局"
            app:layout_constraintStart_toEndOf="@+id/mDT5"
            app:layout_constraintTop_toBottomOf="@+id/mDT1" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>