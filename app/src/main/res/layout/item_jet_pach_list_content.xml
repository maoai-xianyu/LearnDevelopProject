<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d80"
    android:layout_margin="@dimen/d5"
    app:cardBackgroundColor="@color/c_FFFFFF"
    app:cardCornerRadius="@dimen/d10"
    app:cardElevation="@dimen/d2"
    app:cardUseCompatPadding="false">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNote"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="TextView"
            android:textColor="@color/c_000000"
            android:textSize="@dimen/text_size_26" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/d10"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivRowDelete"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="@dimen/d7"
                android:src="@drawable/icon_delete_line"
                android:tint="#9e9e9e" />

            <ImageView
                android:id="@+id/ivRowEdit"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="@dimen/d7"
                android:src="@drawable/icon_edit_line"
                android:tint="#9e9e9e" />


        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>