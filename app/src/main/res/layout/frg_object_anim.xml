<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_FFFFFF">

    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_play_int"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="alpha" />

        <TextView
            android:id="@+id/tv_play_z"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d5"
            android:text="rotationZ" />

        <TextView
            android:id="@+id/tv_play_x"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d5"
            android:text="rotationX" />

        <TextView
            android:id="@+id/tv_play_y"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d5"
            android:text="rotationY" />

        <TextView
            android:id="@+id/tv_trans_x"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d5"
            android:text="tranX" />

        <TextView
            android:id="@+id/tv_trans_y"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d5"
            android:text="tranY" />

        <TextView
            android:id="@+id/tv_scale_x"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d5"
            android:text="scaleX" />

        <TextView
            android:id="@+id/tv_scale_y"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d5"
            android:text="scaleY" />

        <TextView
            android:id="@+id/tv_cancel"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d5"
            android:text="cancel" />

    </LinearLayout>


    <ImageView
        android:id="@+id/iv"
        android:layout_width="@dimen/d80"
        android:layout_height="@dimen/d100"
        android:layout_centerHorizontal="true"
        android:src="@drawable/image_datong_logo" />

    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="@dimen/d80"
        android:layout_height="@dimen/d100"
        android:layout_below="@+id/iv"
        android:layout_centerHorizontal="true"
        android:src="@drawable/icon_down" />

    <TextView
        android:id="@+id/tv_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_arrow"
        android:layout_centerHorizontal="true"
        android:background="@color/c_000000"
        android:padding="@dimen/d10"
        android:text="显示"
        android:textColor="@color/c_f4c41f"
        android:textSize="@dimen/text_size_16" />

    <TextView
        android:id="@+id/tv_show_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_show"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/d10"
        android:textColor="@color/c_f4c41f"
        android:textSize="@dimen/text_size_36" />

    <com.mao.cn.learnDevelopProject.wedget.difineview.PointViewObjectAnin
        android:id="@+id/pva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_show_num"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/d5"
        android:gravity="right"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_pva"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pva圆" />

        <TextView
            android:id="@+id/tv_inter"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d5"
            android:text="插值器" />

        <TextView
            android:id="@+id/tv_argb"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d5"
            android:text="arg arg" />

        <TextView
            android:id="@+id/tv_arg"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d5"
            android:text="arg Int" />
        <TextView
            android:id="@+id/tv_num"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d5"
            android:text="num" />

        <TextView
            android:id="@+id/tv_arrow"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d5"
            android:text="arrow" />

    </LinearLayout>

</RelativeLayout>