<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.OpenSourceFragment">


    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d150"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivFirst"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/image_dafault" />

        <ImageView
            android:id="@+id/ivGlide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/image_dafault" />
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_header"
        android:layout_marginTop="@dimen/d10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/d15"
            android:layout_marginEnd="@dimen/d15">

            <TextView
                android:id="@+id/tv_easyRy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/d20"
                android:textColor="@color/c_000000"
                android:background="@drawable/shape_corner_tv_ffeo5d"
                android:text="easyRecycler"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/tv_easyRyGlide"
                android:layout_toEndOf="@+id/tv_easyRy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/d20"
                android:textColor="@color/c_000000"
                android:background="@drawable/shape_corner_tv_ffeo5d"
                android:text="easyRyGlide"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/tv_expend"
                android:layout_toEndOf="@+id/tv_easyRyGlide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/d20"
                android:textColor="@color/c_000000"
                android:background="@drawable/shape_corner_tv_ffeo5d"
                android:text="tvExpend"
                android:textSize="15sp" />


        </RelativeLayout>


    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>