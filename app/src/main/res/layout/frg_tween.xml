<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d5"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_scale_1"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="scale50" />

        <TextView
            android:id="@+id/btn_scale_2"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d2"
            android:text="scale50%" />

        <TextView
            android:id="@+id/btn_play_3"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d2"
            android:text="scale50%p" />

    </LinearLayout>

    <TextView
        android:id="@+id/btn_rotate_inter"
        style="@style/text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="rotate_inter" />

    <ImageView
        android:id="@+id/iv"
        android:layout_width="@dimen/d80"
        android:layout_height="@dimen/d100"
        android:layout_centerInParent="true"
        android:src="@drawable/image_datong_logo" />


    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="@dimen/d80"
        android:layout_height="@dimen/d100"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/d20"
        android:src="@drawable/icon_down" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_bottom"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_alpha"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="alpha" />

        <TextView
            android:id="@+id/btn_rotate"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d2"
            android:text="rotate" />

        <TextView
            android:id="@+id/btn_rotate_arrow"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d2"
            android:text="rotate_arrow" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/d5"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_trans_x"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="trans_x" />

        <TextView
            android:id="@+id/btn_trans_y"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d2"
            android:text="trans_y" />

        <TextView
            android:id="@+id/btn_animator_set"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d2"
            android:text="animator_set" />

    </LinearLayout>


</RelativeLayout>