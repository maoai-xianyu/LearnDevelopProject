<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.mao.cn.learnDevelopProject.widgets.QQSlidingMenu
        android:id="@+id/qqSlidingMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/home_menu_bg_qq"
        android:orientation="vertical"
        app:menuRightMargin="@dimen/d62">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!-- 菜单布局-->
            <include layout="@layout/layout_main_menu" />

            <!-- 内容布局 -->
            <include layout="@layout/layout_main_content" />

        </LinearLayout>

    </com.mao.cn.learnDevelopProject.widgets.QQSlidingMenu>


</LinearLayout>